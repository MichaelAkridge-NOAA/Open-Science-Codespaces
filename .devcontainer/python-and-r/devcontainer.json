{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "hostRequirements": {
    "cpus": 4
  },
  "workspaceFolder": "/workspaces/Open-Science-Codespaces/.devcontainer/python-and-r/",
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "python3 -m pip install -r requirements.txt",
  "postCreateCommand": "",
  "postStartCommand": "chmod +x ./post_start.sh && ./post_start.sh",
  "customizations": {
    "codespaces": {
      "openFiles": ["README.md"]
    },
    "vscode": {
      "extensions": [
        "ms-toolsai.jupyter",
        "ms-python.python",
        "Ikuyadeu.r"
      ]
    }
  }
}

