{
    "name": "RStudio Codespace - Example 03",
    "image": "rocker/rstudio",
    "appPort": [8787],
    "runArgs": ["--init"],
    "workspaceFolder": "/workspaces/Open-Science-Codespaces/.devcontainer/rstudio-example-03",
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "remoteUser": "root",
    "forwardPorts": [8787],
    "remoteEnv": {
        "DISABLE_AUTH": "true"
    },
    "onCreateCommand": "echo 'www-frame-origin=same' >> /etc/rstudio/rserver.conf && echo 'auth-none=1' >> /etc/rstudio/rserver.conf && rstudio-server restart && chown -R rstudio:rstudio /home/rstudio /workspaces",
    "postStartCommand": "chmod +x /workspaces/Open-Science-Codespaces/.devcontainer/rstudio-example-03/post_start.sh && /workspaces/Open-Science-Codespaces/.devcontainer/rstudio-example-03/post_start.sh"
}

