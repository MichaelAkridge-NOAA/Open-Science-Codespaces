{
  "name": "RStudio Codespace - Example 03",
  "image": "rocker/rstudio:4.1.1",
  "workspaceFolder": "/workspaces/Open-Science-Codespaces/.devcontainer/rstudio-example-03",
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "forwardPorts": [8787],
  "portsAttributes": {
    "8787": {
      "label": "RStudio",
      "onAutoForward": "openBrowser"
    }
  },
  "postStartCommand": "chmod +x /workspaces/Open-Science-Codespaces/.devcontainer/rstudio-example-03/post_start.sh && /workspaces/Open-Science-Codespaces/.devcontainer/rstudio-example-03/post_start.sh && rserver --server-user=rstudio --auth-none=1 --www-address=0.0.0.0 --www-port=8787 --www-root-path=/"
}

